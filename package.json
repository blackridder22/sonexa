{
  "name": "sonexa",
  "version": "0.1.0",
  "description": "Your private audio library for music & SFX.",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"npm:start-electron\"",
    "start-electron": "tsc-watch -p tsconfig.node.json --onSuccess \"electron .\"",
    "build:renderer": "vite build",
    "build:electron": "tsc -p tsconfig.node.json",
    "package": "npm run build:renderer && npm run build:electron && electron-builder"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "sqlite",
    "supabase"
  ],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.sonexa.app",
    "productName": "Sonexa",
    "files": [
      "dist/electron/**/*",
      "dist/index.html",
      "dist/assets/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg"
    }
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.74.0",
    "better-sqlite3": "^12.4.1",
    "electron-store": "^11.0.2",
    "howler": "^2.2.4",
    "keytar": "^7.9.0",
    "music-metadata": "^11.9.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-dropzone": "^14.3.8",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/howler": "^2.2.12",
    "@types/react": "^19.2.1",
    "@types/react-dom": "^19.2.0",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "electron": "^38.2.1",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14",
    "tsc-watch": "^7.2.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.9"
  }
}
